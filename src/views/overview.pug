extends base

block content
  main.main
    // Hero Section
    section.hero-section
      .hero-content
        h1.hero-title Discover Your Next Adventure
        p.hero-subtitle Explore breathtaking destinations with expert guides and unforgettable experiences
        .hero-stats
          .hero-stat
            span.hero-stat-number #{tours.length}+
            span.hero-stat-label Amazing Tours
          .hero-stat
            span.hero-stat-number 4.9
            span.hero-stat-label Average Rating
          .hero-stat
            span.hero-stat-number 10k+
            span.hero-stat-label Happy Travelers
    
    // Tours Grid
    section.tours-section
      .container
        h2.heading-secondary.text-center Explore Our Tours
        p.section-description.text-center Choose from our carefully curated selection of adventure tours
        
        .card-container
          each tour in tours
            .card.hover-lift
              .card__header
                .card__picture
                  .card__picture-overlay &nbsp;
                  img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
                  .card__badge.card__badge--difficulty(class=`card__badge--${tour.difficulty}`)= tour.difficulty
                h3.heading-tertirary
                  span= tour.name

              .card__details
                h4.card__sub-heading= `${tour.difficulty} ${tour.duration}-day tour`
                p.card__text= tour.summary
                
                .card__features
                  .card__data
                    svg.card__icon
                      use(xlink:href='/img/icons.svg#icon-map-pin')
                    span= tour.startLocation.description
                  .card__data
                    svg.card__icon
                      use(xlink:href='/img/icons.svg#icon-calendar')
                    span= tour.startDates[0].toLocaleString('en-us', {month: 'long', year: 'numeric'})
                  .card__data
                    svg.card__icon
                      use(xlink:href='/img/icons.svg#icon-flag')
                    span= `${tour.locations.length} stops`
                  .card__data
                    svg.card__icon
                      use(xlink:href='/img/icons.svg#icon-user')
                    span= `${tour.maxGroupSize} people`

              .card__footer
                .card__pricing
                  p.card__price
                    span.card__footer-value= `$${tour.price}`
                    span.card__footer-text per person
                  p.card__ratings
                    span.card__footer-value= tour.ratingsAverage
                    span.card__footer-text= `rating (${tour.ratingsQuantity})`
                a.btn.btn--green.btn--small(href=`/tour/${tour.slug}`) 
                  svg.btn__icon
                    use(xlink:href='/img/icons.svg#icon-star')
                  span View Details