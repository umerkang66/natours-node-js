header.header
  nav.nav.nav--tours
    a.nav__el(href='/') 
      svg.nav__icon
        use(xlink:href='/img/icons.svg#icon-map')
      span All Tours
  //- .header__logo
  //-   img(src='/img/logo-white.png' alt='Natours logo')
  nav.nav.nav--user
    //- This "user" is from isLoggedIn "auth" middleware there we set the value to res.local.user
    if user
      a.nav__el.nav__el--logout(href='#') 
        svg.nav__icon
          use(xlink:href='/img/icons.svg#icon-log-out')
        span Log out
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
    else
      a.nav__el(href='/login') 
        svg.nav__icon
          use(xlink:href='/img/icons.svg#icon-log-in')
        span Log in
      a.nav__el.nav__el--cta(href='/signup') 
        svg.nav__icon
          use(xlink:href='/img/icons.svg#icon-user-plus')
        span Sign up
